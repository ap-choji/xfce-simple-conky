conky.config = {
    alignment = 'bottom_left',
    background = true,
    border_inner_margin = 15,
    border_width = 0,
    cpu_avg_samples = 2,
    default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    use_xft = true,
    font = 'Monospace:size=10',
    gap_x = 20,
    gap_y = 30,
    minimum_height = 5,
    minimum_width = 5,
    net_avg_samples = 2,
    double_buffer = true,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'normal',
    own_window_transparent = true,
    own_window_argb_visual = true,
    own_window_argb_value = 180,
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    show_graph_scale = false,
    show_graph_range = false
};

conky.text = [[
${voffset 15}${color grey}${font Monospace:bold:size=12}${time %A, %d %B %Y}
${voffset 5}${color grey}${font Monospace:bold:size=20}${time %H:%M:%S}
${voffset 15}${color grey}${font Monospace:bold:size=12}${exec whoami}@${nodename}
${voffset 25}${color grey}${font Monospace:bold:size=11}CPU || ${cpu cpu0}% 
${voffset 5}${color grey}${font Monospace:size=10}${cpubar cpu0}
${voffset 15}${color grey}${font Monospace:bold:size=11}RAM || ${memperc}% 
${voffset 5}${color grey}${font Monospace:size=10}${membar}
${voffset 15}${color grey}${font Monospace:bold:size=11}SSD || ${fs_used_perc /}% 
${voffset 5}${color grey}${font Monospace:size=10}${fs_bar /}
${voffset 15}${color grey}${font Monospace:bold:size=10}Network
${voffset 5}${color grey}${font Monospace:size=8}${if_existing /proc/net/route wlp3s0}${wireless_essid wlp3s0}${else}N/A${endif}
${voffset 15}${color grey}${font Monospace:bold:size=10}IP Addresses
${voffset 5}${color grey}${font Monospace:size=8}Local IP: ${exec ip addr show wlp3s0 | grep -w inet | awk '{print $2}' | cut -d'/' -f1}
${voffset 5}${color grey}${font Monospace:size=8}Public IP : ${exec wget -qO- http://ipecho.net/plain ; echo}
]];
